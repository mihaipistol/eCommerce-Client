{
  "name": "ecommerce-client",
  "version": "0.1.0",
  "description": "Client application for an e-commerce",
  "private": true,
  "type": "module",
  "author": "Mihai Pistol",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "test": "vitest run --reporter verbose",
    "test:watch": "vitest --reporter verbose --watch",
    "test:coverage": "vitest run --reporter verbose --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "start": "serve -s dist -n -p $PORT",
    "start:local": "serve -s dist -n -p 5000"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.6.2",
    "redux": "^5.0.1",
    "serve": "^14.2.4",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-istanbul": "^3.2.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mihaipistol/eCommerce-Client.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm lint",
      "pre-push": "npm test"
    }
  },
  "eslintConfig": {
    "globals": {
      "NodeJS": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.js",
          "*.mjs",
          "*.jsx",
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/": "off",
          "@typescript-eslint/ban-ts-comments": "off",
          "@typescript-eslint/ban-ts-ignore": "off",
          "@typescript-eslint/class-name-casting": "off",
          "@typescript-eslint/explicit-module-boundry-type": "off",
          "@typescript-eslint/interface-name-prefix": "off",
          "@typescript-eslint/member-delimiter-style": "off",
          "@typescript-eslint/no-unused-vars": "warn",
          "@typescript-eslint/no-use-before-define": "off",
          "@typescript-eslint/no-var-requires": "off",
          "consistent-return": "off",
          "eslint-plugin-import/no-unresolved": "off",
          "import/extensions": "off",
          "import/prefer-default-export": "off",
          "jsx-a11y/anchor-is-valid": "off",
          "jsx-a11y/click-events-have-key-events": "off",
          "jsx-a11y/label-has-asociated-control": "off",
          "jsx-a11y/no-noninteractive-element-interactions": "off",
          "jsx-a11y/no-static-element-interactions": "off",
          "max-len": [
            "error",
            {
              "code": 80,
              "tabWidth": 2
            }
          ],
          "no-extraneous-dependencies": "off",
          "no-param-reassign": "off",
          "no-prototype-builtins": "off",
          "no-restricted-syntax": "off",
          "no-undef": "off",
          "no-underscore-dangle": "off",
          "no-unused-vars": "off",
          "no-use-before-definex": "off",
          "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
          ]
        }
      }
    ],
    "rules": {
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ]
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true,
    "trailingComma": "none",
    "endOfLine": "auto",
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "jsxSingleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "quoteProps": "as-needed"
  }
}
